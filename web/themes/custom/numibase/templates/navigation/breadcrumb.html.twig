{#
/**
 * @file
 * Theme override for a breadcrumb trail.
 *
 * Available variables:
 * - breadcrumb: Breadcrumb trail items.
 */
#}
{% if breadcrumb %}
  <nav role="navigation" aria-labelledby="system-breadcrumb">
    <h2 id="system-breadcrumb" class="visually-hidden">You are in the {{ section_breadcrumb }} section</h2>
    <ul>
      {% for item in breadcrumb %}
        <li> 
          {% if item.url %}
            <a href="{{ item.url }}">
              <span>{{ item.text }}</span>
            </a>

          {% else %}
            {{ item.text }}
          {% endif %}
        </li>
      {% endfor %}
    </ul>
  </nav>
{% endif %}


